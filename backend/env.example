# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=sui_monitor

# Sui RPC配置 - 网络环境
# 可选值: mainnet, testnet, devnet
SUI_NETWORK=mainnet

# Sui RPC URLs (根据网络环境自动选择)
# 主网 (Mainnet)
SUI_MAINNET_RPC_URL=https://fullnode.mainnet.sui.io:443
SUI_MAINNET_WS_URL=wss://fullnode.mainnet.sui.io:443

# 测试网 (Testnet)
SUI_TESTNET_RPC_URL=https://fullnode.testnet.sui.io:443
SUI_TESTNET_WS_URL=wss://fullnode.testnet.sui.io:443

# 开发网 (Devnet)
SUI_DEVNET_RPC_URL=https://fullnode.devnet.sui.io:443
SUI_DEVNET_WS_URL=wss://fullnode.devnet.sui.io:443

# 兼容性配置 (保持向后兼容)
SUI_RPC_URL=https://fullnode.mainnet.sui.io:443
SUI_WS_URL=wss://fullnode.mainnet.sui.io:443

# 应用配置
PORT=3001
NODE_ENV=development

# 扫描配置
SCAN_INTERVAL=5000
BATCH_SIZE=100 